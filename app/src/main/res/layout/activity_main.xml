<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#808080"
        android:gravity="right"
        android:paddingTop="150dp"
        android:paddingRight="50dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="45dp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnAC"
            android:onClick="btnOnClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:layout_weight="2"
            android:text="AC"
            android:textColor="@color/black"
            app:backgroundTint="#B6B6B6" />
        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="+/-"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="#c0c0c0" />
        <Button
            android:id="@+id/btnDivideHundred"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="%"
            android:onClick="btnPercent"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:layout_weight="4"
            android:text="/"
            app:backgroundTint="@color/colourSymbol" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="7"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="8"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="9"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber"/>

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="*"
            app:backgroundTint="@color/colourSymbol"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="4"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="5"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="6"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="-"
            app:backgroundTint="@color/colourSymbol"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="1"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="3"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="+"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:backgroundTint="@color/colourSymbol"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="0"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="."
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            app:backgroundTint="@color/colourNumber" />


        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="="
            android:insetBottom="0dp"
            android:insetTop="0dp"
            app:backgroundTint="@color/colourSymbol"/>
    </TableRow>
</TableLayout>